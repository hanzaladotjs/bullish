{
  "compilerOptions": {
    
    "target": "ES6", // Specify the ECMAScript target version
    "module": "CommonJS", // Use CommonJS modules (default for Node.js)
    "strict": true, // Enable all strict type-checking options
    "esModuleInterop": true, // Allow compatibility with CommonJS modules
    "skipLibCheck": true, // Skip type checking of library files
    "forceConsistentCasingInFileNames": true, // Ensure consistent file casing
    "outDir": "./dist" // Output directory for compiled JavaScript files
  },
  "include": ["**/*.ts"], // Include all TypeScript files
  "exclude": ["node_modules"] // Exclude the node_modules directory
}
